<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>    
<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>  

<main class="container">
<div class="row">
    <h1><%= title%></h1>

    <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Name</label>
          <input type="text" class="form-control" 
          id="nameTextField"  placeholder="Enter Your Name"
          name="name" 
           value="<%= contactlist.name %>" 
           required>
        </div>

        <div class="form-group">
          <label for="numberTextField">Phone Number</label>
          <input type="text" class="form-control" id="numberTextField"  placeholder="Enter Your Number"
          name="phonenumber" 
          value="<%= contactlist.phonenumber %>" 
          required>
        </div>

        <div class="form-group">
            <label for="emailTextField">Email</label>
            <input type="text" class="form-control" id="emailTextField"  placeholder="Enter Your Email"
            name="email" 
            value="<%= contactlist.email %>" 
            required>
          </div>
  
        
        
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/contact-list" class="btn btn-warning">Cancel</a>
      </form>

</div>

</main>